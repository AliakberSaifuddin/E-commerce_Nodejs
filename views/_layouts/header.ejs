
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Front</title>


    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.5.7/jquery.fancybox.min.css">
    <link rel="stylesheet" href="/css/style.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

  </head>
  <body>
    <div class="ajaxbg">
      <div class="ajaxinner">
        <h3>You are now being redirected to paypal...</h3>
        <img src="/images/ajax-loader.gif" alt="">
      </div>
    </div>
    <nav class="navbar navbar-expand navbar-dark bg-dark">
      <a class="navbar-brand" href="#">ShoppingKeera</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <% pages.forEach((page)=>{ %>
            <li class="nav-item">
              <% if(page.slug === "home"){ %>
                <a class="nav-link" href="/"><%= page.title %></a>
              <% }else{ %>
                <a class="nav-link" href="/<%= page.slug %>"><%= page.title %></a>
              <% } %>  
            </li>
          <% }) %>
        </ul>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a class="nav-link" href="/cart/checkout">My Cart
                <span class="badge badge-primary">
                  <%= totalQty %>
                </span>
              </a>                
            </li>
            <% if(!user){ %>
              <li class="nav-item">
                <a class="nav-link" href="/user/register">Register</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/user/login">Log In</a>
              </li>
            <% }else{ %>
              <li class="nav-item">
                <a class="nav-link" href="/user/logout">Hi, <%= user.username %> Log Out</a>
              </li>
            <% } %>

            <% if(user && user.admin === 1){ %>
              <li class="nav-item">
                <a class="nav-link" href="/admin/pages">Admin Area</a>
              </li>
            <% } %>
        </ul>
      </div>
    </nav>

    <br>
    <div class="container">
        <%- messages('messages', locals) %>
        
        <% if(errors != null){ %>
          <%  errors.forEach(function(error){ %>
                 <div class="alert alert-danger">
                     <%= error.msg %>
                 </div>
          <%  }); %>
        <% } %>

        <div class="row">
          <div class="col-xs-12 col-md-3">
              <h3>Categories</h3>
              <ul class="list-group">
                <li class="list-group-item"><a href="/products">All Products</a></li>
                <% categories.forEach((c)=>{ %>
                  <li class="list-group-item">
                      <a class="nav-link" href="/products/<%= c.slug %>"><%= c.title %></a>
                  </li>
                <% }) %>
              </ul>
          </div>
          <div class="col-xs-12 col-md-1">
       
          </div>
          <div class="col-xs-12 col-md-8">
          