<%- include('_layouts/header'); %>


<div id="card-errors" class="alert alert-error <% if(noError){ %> d-none <% } %>">
    <%= errMsg %>
</div>

<h1>Stripe API CheckOut</h1>
<h4>Your Total: $<%= totalPrice %></h4>
<form action="/cart/stripeCheckOut" method="post" id="stripecheckout-form">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" id="name" class="form-control" placeholder="" required>
    </div>
    <div class="form-group">
        <label for="adddress">Address</label>
        <input type="text" name="adddress" id="address" class="form-control" placeholder="">
    </div>
    <div class="form-group">
        <label for="card-number">Credit Card Number</label>
        <div id="card-number"></div>
    </div>
    <div class="form-group">
        <label for="card-expiry-month">Card Expiry</label>
        <div id="card-expiry"></div>
    </div>
    <div class="form-group">
        <label for="card-cvc">Card CVC</label>
        <div id="card-cvc"></div>
    </div>

    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

    <input type="submit" class="btn btn-success" value="Pay">

</form>

<script src="https://js.stripe.com/v3/"></script>
<script src="/js/checkout.js"></script>

<%- include('_layouts/footer'); %>
